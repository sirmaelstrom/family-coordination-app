@using FamilyCoordinationApp.Services
@using MudBlazor

@inject IImageService ImageService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.PhotoLibrary" Class="mr-2" />
            Select Image
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <div class="d-flex justify-center pa-4">
                <MudProgressCircular Indeterminate="true" />
            </div>
        }
        else if (!_images.Any())
        {
            <MudAlert Severity="Severity.Info">
                No images found. Upload an image first using the file picker.
            </MudAlert>
        }
        else
        {
            <MudText Typo="Typo.body2" Class="mb-3">
                Click an image to select it. These are all images uploaded for your household.
            </MudText>
            <div class="image-grid">
                @foreach (var image in _images)
                {
                    <div class="image-item @(_selectedImage == image ? "selected" : "")"
                         @onclick="() => SelectImage(image)">
                        <img src="@image" alt="Recipe image" />
                        @if (_selectedImage == image)
                        {
                            <div class="selected-overlay">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Large" />
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Confirm"
                   Disabled="string.IsNullOrEmpty(_selectedImage)">
            Select Image
        </MudButton>
    </DialogActions>
</MudDialog>

<style>
    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 12px;
        max-height: 400px;
        overflow-y: auto;
        padding: 4px;
    }

    .image-item {
        position: relative;
        aspect-ratio: 1;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        border: 3px solid transparent;
        transition: all 0.2s ease;
    }

    .image-item:hover {
        border-color: var(--mud-palette-primary);
        transform: scale(1.02);
    }

    .image-item.selected {
        border-color: var(--mud-palette-success);
    }

    .image-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .selected-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public int HouseholdId { get; set; }
    [Parameter] public string? CurrentImage { get; set; }

    private List<string> _images = new();
    private string? _selectedImage;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        _selectedImage = CurrentImage;
        _images = (await ImageService.ListImagesAsync(HouseholdId)).ToList();
        _loading = false;
    }

    private void SelectImage(string image)
    {
        _selectedImage = _selectedImage == image ? null : image;
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Confirm()
    {
        MudDialog.Close(DialogResult.Ok(_selectedImage));
    }
}
