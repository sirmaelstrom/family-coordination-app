        <MudText Typo="Typo.h5" Class="mb-2">Changes to Terms</MudText>
        <MudText Typo="Typo.body1">
            These terms may be updated from time to time. Continued use of the service constitutes 
            acceptance of any changes.
        </MudText>
    </MudPaper>

    <div class="d-flex justify-center mt-6">
        <MudButton Href="/dashboard" Color="Color.Primary" Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Home">
            Back to Home
        </MudButton>
    </div>
</MudContainer>
