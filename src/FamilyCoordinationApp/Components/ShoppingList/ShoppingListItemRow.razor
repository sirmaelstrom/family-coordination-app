@using FamilyCoordinationApp.Data.Entities
@using FamilyCoordinationApp.Components.Shared

<div class="shopping-list-item @GetItemClass()" @onclick="HandleClick">
    <MudIcon Icon="@Icons.Material.Filled.DragIndicator"
             Class="drag-handle"
             Size="Size.Small" />

    <MudCheckBox T="bool" 
                 Value="@Item.IsChecked"
                 ValueChanged="HandleCheckChanged"
                 Class="item-checkbox"
                 Size="Size.Medium"
                 @onclick:stopPropagation="true"
                 Color="Color.Primary" />

    <div class="item-content">
        <MudText Typo="Typo.body1" Class="@GetTextClass()">
            @if (Item.Quantity.HasValue)
            {
                <span class="quantity-controls" @onclick:stopPropagation="true">
                    <MudIconButton Icon="@Icons.Material.Filled.Remove"
                                   Size="Size.Small"
                                   OnClick="HandleDecrement"
                                   aria-label="Decrease quantity"
                                   Class="quantity-button" />
                    <span class="quantity">@FormatQuantity(Item.Quantity.Value)</span>
                    @if (!string.IsNullOrEmpty(Item.Unit))
                    {
                        <span class="unit">@Item.Unit</span>
                    }
                    <MudIconButton Icon="@Icons.Material.Filled.Add"
                                   Size="Size.Small"
                                   OnClick="HandleIncrement"
                                   aria-label="Increase quantity"
                                   Class="quantity-button" />
                </span>
            }
            <span class="name">@Item.Name</span>
        </MudText>

        @if (!string.IsNullOrEmpty(GetSourceRecipes()))
        {
            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="source-recipes">
                From: @GetSourceRecipes()
            </MudText>
        }
    </div>

    @if (Item.AddedBy != null)
    {
        <MudTooltip Text="@($"Added by {Item.AddedBy.DisplayName}")">
            <UserAvatar User="@Item.AddedBy" Size="Size.Small" />
        </MudTooltip>
    }

    <div class="item-actions" @onclick:stopPropagation="true">
        <MudIconButton Icon="@Icons.Material.Filled.Edit"
                       Size="Size.Medium"
                       OnClick="HandleEdit"
                       aria-label="Edit item" />
        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                       Size="Size.Medium"
                       Color="Color.Error"
                       OnClick="HandleDelete"
                       aria-label="Delete item" />
    </div>
</div>

@code {
    [Parameter] public ShoppingListItem Item { get; set; } = default!;
    [Parameter] public EventCallback<ShoppingListItem> OnChecked { get; set; }
    [Parameter] public EventCallback<ShoppingListItem> OnEdit { get; set; }
    [Parameter] public EventCallback<ShoppingListItem> OnDelete { get; set; }
    [Parameter] public EventCallback<ShoppingListItem> OnQuantityChanged { get; set; }

    private string GetItemClass()
    {
        return Item.IsChecked ? "item-checked" : "item-unchecked";
    }

    private string GetTextClass()
    {
        return Item.IsChecked ? "text-decoration-line-through" : "";
    }

    private async Task HandleClick()
    {
        // Tap anywhere on row to check/uncheck
        await HandleCheckChanged(!Item.IsChecked);
    }

    private async Task HandleCheckChanged(bool isChecked)
    {
        // Update the item state (parent handles persistence)
        await OnChecked.InvokeAsync(Item);
    }

    private async Task HandleEdit()
    {
        await OnEdit.InvokeAsync(Item);
    }

    private async Task HandleDelete()
    {
        await OnDelete.InvokeAsync(Item);
    }

    private async Task HandleIncrement()
    {
        if (!Item.Quantity.HasValue) return;

        // Increment quantity by 1
        var oldQuantity = Item.Quantity.Value;
        Item.Quantity = oldQuantity + 1;

        // Update QuantityDelta to track user adjustment
        // If this was from a meal plan, preserve the delta
        if (Item.QuantityDelta.HasValue)
        {
            Item.QuantityDelta += 1;
        }
        else
        {
            Item.QuantityDelta = 1;
        }

        Item.UpdatedAt = DateTime.UtcNow;

        // Notify parent to persist the change
        await OnQuantityChanged.InvokeAsync(Item);
    }

    private async Task HandleDecrement()
    {
        if (!Item.Quantity.HasValue) return;

        // Minimum quantity is 1
        if (Item.Quantity.Value <= 1) return;

        // Decrement quantity by 1
        var oldQuantity = Item.Quantity.Value;
        Item.Quantity = oldQuantity - 1;

        // Update QuantityDelta to track user adjustment
        if (Item.QuantityDelta.HasValue)
        {
            Item.QuantityDelta -= 1;
        }
        else
        {
            Item.QuantityDelta = -1;
        }

        Item.UpdatedAt = DateTime.UtcNow;

        // Notify parent to persist the change
        await OnQuantityChanged.InvokeAsync(Item);
    }

    private string FormatQuantity(decimal quantity)
    {
        // Simple approach: show whole numbers without decimals, decimals with up to 2 places
        if (quantity == Math.Floor(quantity))
        {
            // Whole number
            return quantity.ToString("0");
        }
        else
        {
            // Decimal - show up to 2 decimal places, trimming trailing zeros
            return quantity.ToString("0.##");
        }
    }

    private string GetSourceRecipes()
    {
        return Item.SourceRecipes ?? string.Empty;
    }
}

<style>
    .shopping-list-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        min-height: 48px;
        border-bottom: 1px solid var(--mud-palette-lines-default);
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .shopping-list-item:hover {
        background-color: var(--mud-palette-action-default-hover);
    }

    .drag-handle {
        cursor: grab;
        color: var(--mud-palette-text-secondary);
    }

    .item-checkbox {
        flex-shrink: 0;
        min-width: 44px;
        min-height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .item-content {
        flex: 1;
        min-width: 0; /* Allow text truncation */
    }

    .quantity-controls {
        display: inline-flex;
        align-items: center;
        gap: 2px;
        margin-right: 8px;
    }

    .quantity-button {
        min-width: 44px;
        min-height: 44px;
        padding: 8px;
    }

    .item-actions {
        display: flex;
        gap: 4px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .shopping-list-item:hover .item-actions {
        opacity: 1;
    }

    .item-checked {
        opacity: 0.6;
    }

    .quantity {
        font-weight: 600;
        margin: 0 4px;
        min-width: 20px;
        text-align: center;
    }

    .unit {
        margin-right: 4px;
    }

    .source-recipes {
        margin-top: 2px;
    }
</style>
