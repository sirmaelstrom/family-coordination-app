        <MudText Typo="Typo.body1" Class="mb-3">
            Family Kitchen is provided for personal, non-commercial use to help families coordinate:
        </MudText>
        <MudList T="string" Dense="true">
            <MudListItem T="string" Icon="@Icons.Material.Filled.MenuBook">Recipe collection and sharing</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.CalendarMonth">Meal planning</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.ShoppingCart">Shopping list management</MudListItem>
        </MudList>
    </MudPaper>

    <MudPaper Class="pa-4 mb-4" Elevation="0">
        <MudText Typo="Typo.h5" Class="mb-2">User Content</MudText>
        <MudText Typo="Typo.body1">
            You retain ownership of any content you create within Family Kitchen, including recipes and meal plans. 
            By using the service, you grant household members the ability to view and interact with shared content.
        </MudText>
    </MudPaper>

