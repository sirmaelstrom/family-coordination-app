@page "/setup"
@rendermode InteractiveServer
@attribute [AllowAnonymous]
@using System.Security.Claims
@using FamilyCoordinationApp.Services
@inject SetupService SetupService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor
@inject ILogger<FirstRunSetup> Logger

<PageTitle>Welcome - Family Coordination Setup</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center justify-center" Style="min-height: 100vh;">
    <MudPaper Elevation="4" Class="pa-8" Style="width: 100%; max-width: 400px;">
        <div class="text-center mb-6">
            <MudIcon Icon="@Icons.Material.Filled.FamilyRestroom"
                     Size="Size.Large"
                     Color="Color.Primary"
                     Style="font-size: 4rem;" />
            <MudText Typo="Typo.h4" Class="mt-4">Welcome</MudText>
            <MudText Typo="Typo.body1" Color="Color.Secondary">Let's set up your household</MudText>
        </div>

        @if (_isAlreadySetup)
        {
            <MudAlert Severity="Severity.Success" Class="mb-4">
                Setup is already complete!
            </MudAlert>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Href="/">
                Go to Home
            </MudButton>
        }
        else if (!_isAuthenticated)
        {
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">
                First, sign in with Google to create your household.
            </MudText>

            <form method="post" action="/account/login-google">
                <input type="hidden" name="returnUrl" value="/setup" />
                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Outlined"
                           FullWidth="true"
                           Size="Size.Large"
                           Class="py-3">
                    <svg class="mr-3" width="20" height="20" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Sign in with Google
                </MudButton>
            </form>
        }
        else
        {
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
                Signed in as <strong>@_userEmail</strong>
            </MudText>

            <MudTextField @bind-Value="_householdName"
                          Label="Household Name"
                          Placeholder="The Smith Family"
                          Variant="Variant.Outlined"
                          HelperText="This name will appear throughout the app."
                          Class="mb-4" />

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="mb-4">
                    @_errorMessage
                </MudAlert>
            }

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Disabled="_isSubmitting"
                       OnClick="HandleSetup">
                @if (_isSubmitting)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    <span>Creating household...</span>
                }
                else
                {
                    <span>Create Household</span>
                }
            </MudButton>
        }
    </MudPaper>
</MudContainer>

@code {
    private bool _isAlreadySetup;
    private bool _isAuthenticated;
    private string _userEmail = "";
    private string _userName = "";
    private string _googleId = "";
    private string _householdName = "";
    private string _errorMessage = "";
    private bool _isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("FirstRunSetup: OnInitializedAsync started");

        _isAlreadySetup = await SetupService.IsSetupCompleteAsync();

        if (_isAlreadySetup)
        {
            Logger.LogInformation("FirstRunSetup: Setup already complete");
            return;
        }

        var user = HttpContextAccessor.HttpContext?.User;
        _isAuthenticated = user?.Identity?.IsAuthenticated == true;

        Logger.LogInformation("FirstRunSetup: IsAuthenticated={IsAuthenticated}", _isAuthenticated);

        if (_isAuthenticated)
        {
            // Log all claims for debugging
            var claims = string.Join(", ", user!.Claims.Select(c => $"{c.Type}={c.Value}"));
            Logger.LogInformation("FirstRunSetup: User claims: {Claims}", claims);

            _userEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? "";
            _userName = user.FindFirst(ClaimTypes.Name)?.Value ?? _userEmail;
            _googleId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "";

            Logger.LogInformation("FirstRunSetup: Email={Email}, Name={Name}, GoogleId={GoogleId}",
                _userEmail, _userName, _googleId);
        }
    }

    private async Task HandleSetup()
    {
        Logger.LogInformation("FirstRunSetup: HandleSetup called with HouseholdName={HouseholdName}", _householdName);

        if (string.IsNullOrWhiteSpace(_householdName))
        {
            _errorMessage = "Please enter a household name.";
            Logger.LogWarning("FirstRunSetup: Household name is empty");
            return;
        }

        _isSubmitting = true;
        _errorMessage = "";

        Logger.LogInformation("FirstRunSetup: Creating household with Email={Email}, Name={Name}, GoogleId={GoogleId}",
            _userEmail, _userName, _googleId);

        try
        {
            await SetupService.CreateHouseholdAsync(
                _householdName.Trim(),
                _userEmail,
                _userName,
                _googleId);

            Logger.LogInformation("FirstRunSetup: Household created successfully, redirecting to home");

            // Redirect to home after successful setup
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "FirstRunSetup: Failed to create household");
            _errorMessage = $"Failed to create household: {ex.Message}";
            _isSubmitting = false;
        }
    }
}
